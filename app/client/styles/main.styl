@import 'nib'

#bg-cover {
  background-image: url(bg.jpg);
  background-position: center top;
  background-size: cover;
  -webkit-filter: blur(10px);
  -ms-filter: blur(10px);
  filter: blur(10px);
  -mox-box-flex: 1 0 auto;
  -ms-flex: 1 0 auto;
  -webkit-flex: 1 0 auto;
  flex: 1 0 auto;
  min-height: 100%;
  min-width: 100%;
  position: fixed;
  z-index: 0;
}

.hidden.menu {
  display: none;
}

.container {
  margin: 0em;
}

.masthead .logo.item img {
  margin-right: 1em;
}

.masthead .ui.menu .ui.button {
  margin-left: 0.5em;
}

h1.ui.header, h2.ui.header, h3.ui.header, h4.ui.header, h5.ui.header {
  font-family: "Ek Mukta", sans-serif !important;
}

.masthead h1.ui.header {
  font-size: 4em;
  font-weight: normal;
}

.masthead h2 {
  font-size: 1.7em;
  font-weight: normal;
}

.ui.vertical.stripe {
  padding: 8em 0em;
}

.ui.vertical.stripe h3 {
  font-size: 2em;
}

.ui.vertical.stripe .button + h3,
.ui.vertical.stripe p + h3 {
  margin-top: 3em;
}

.ui.vertical.stripe .floated.image {
  clear: both;
}

.ui.vertical.stripe p {
  font-size: 1.33em;
}

.ui.vertical.stripe .horizontal.divider {
  margin: 3em 0em;
}

.quote.stripe.segment {
  padding: 0em;
}

.quote.stripe.segment .grid .column {
  padding-top: 5em;
  padding-bottom: 5em;
}

.footer.segment {
  padding: 2em 0em;
  margin-top: 26px !important;
}

.secondary.pointing.menu .toc.item {
  display: none;
}

@-webkit-keyframes colours {

  to {
    text-shadow: 0 0 10px rgba(255, 255, 255, 1), 0 0 20px rgba(255, 255, 255, 1), 0 0 30px rgba(255, 255, 255, 1), 0 0 40px #6bf7ff, 0 0 70px #6bf7ff, 0 0 80px #6bf7ff, 0 0 100px #000000;
  }

}

.text-glow {
  color: rgba(255, 255, 255, 1);
  -webkit-animation: colours 2s infinite alternate;
}

.ui.secondary.inverted.pointing.menu .active.item {
  border-color: #428bca;
}

.masthead {
  .ui.menu .dropdown.item .menu {
    min-width: -webkit-max-content !important;
  }
}

body.pushable > .pusher {
  background: #1B1C1D !important;
}

.search-field {
  margin-top: 6% !important;
}

#__blaze-root {
  display: flex;
  min-height: 100vh;
  flex-direction: column;
}

#container {
  flex: 1;
}

.add-width {
  width: 11.333333% !important;
  padding-left: 0 !important;
  padding-right: 0 !important;
}

.minus-width {
  width: 5.333333% !important;
}

.ui.inverted.segment, .ui.primary.inverted.segment {
  background: white;
  color: black;
}

.ui.inverted.header {
  color: #042D54;
}

.space-margin {
  margin: 1em 0 !important;
}

.logo {
  width: 15em;
}

.savings-img {
  width: 10em;
  height: 5.5em;
}

textarea {
  resize: none !important;
}

.opacity {
  /*  opacity: 0.7;*/
  background-color: rgba(255, 254, 254, 0.4) !important;
}

.ui.checkbox label, .ui.checkbox + label, label {
  color: black !important;
}

.tick-mark {
  width: 2px;
  background: #19AFFF;
  height: 22px;
  position: absolute;
  left: 49%;
  top: -10px;
}

.ui.checkbox input.hidden {
  z-index: 1;
}

.ui.steps {
  margin: 0 !important;
}

.blue-text {
  color: #042C56 !important;
}

.margin-bottom {
  margin-bottom: 20px !important;
}

.no-margin {
  margin: 0 !important;
}

.no-wing-padding {
  padding: 1em 0 !important;
}

.no-padding {
  padding: 0 !important;
}

@media (min-width: 768px) {
  body.pushable.dimmable {
    overflow: hidden !important;
  }
}

@import 'orb.import'
@import 'mobile.import'

